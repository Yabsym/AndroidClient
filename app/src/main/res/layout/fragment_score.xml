<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.admin.ui.score.ScoreFragment">
    <com.bin.david.form.core.SmartTable
            android:id="@+id/tableScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <RelativeLayout android:layout_alignParentBottom="true"
            android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="667dp" tools:layout_editor_absoluteX="0dp">
        <Button android:layout_alignParentLeft="true"
                android:text="@string/menu_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prevScore"/>
        <Button android:layout_alignParentRight="true"
                android:text="@string/menu_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextScore"/>
    </RelativeLayout>
</RelativeLayout>